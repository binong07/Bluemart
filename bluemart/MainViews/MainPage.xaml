<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
			 xmlns:common = "clr-namespace:bluemart.Common;assembly=bluemart"
			 x:Class="bluemart.MainViews.MainPage">
	<ContentPage.Padding>
	        <OnPlatform x:TypeArguments="Thickness"
	                    iOS="0, 20, 0, 0"
	                    Android="0, 0, 0, 0"
	                    WinPhone="0, 0, 0, 0" />
  	</ContentPage.Padding>
	<ContentPage.Content>
	   	<StackLayout x:Name = "StackLayout1" Padding="0,0,0,0" VerticalOptions = "CenterAndExpand" Spacing = "20" BackgroundColor = "White">
	   		<Image x:Name="LogoImage2" Source="main_logo2" Aspect = "AspectFit" />         		        	
       		<Button x:Name = "LocationButton" Text = "Choose Your Location" HorizontalOptions = "Center" Clicked = "OnLocationButtonClicked" BackgroundColor = "White" BorderWidth = "2"/>
       		<Label x:Name = "orLabel" Text = "OR" HorizontalOptions = "Center" TextColor = "Blue"/>
       		<Button x:Name = "MapButton" Text = "Choose From Map" HorizontalOptions = "Center" TextColor = "Blue" Clicked = "OnMapButtonClicked" BackgroundColor = "White" BorderColor = "Red" BorderWidth = "2"/>		
       		<Image x:Name="LogoImage" Source="main_logo" Aspect = "AspectFit" />           
        </StackLayout>   
	</ContentPage.Content>


</ContentPage>